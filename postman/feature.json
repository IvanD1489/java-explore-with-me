{
  "info": {
    "_postman_id": "feature-location-processing-collection",
    "name": "Feature: Location Processing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Создать локацию",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "pm.collectionVariables.set(\"randomLocationName\", \"Location_\" + Math.floor(Math.random() * 1000000));"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "  pm.response.to.have.status(201);",
              "});",
              "var json = pm.response.json();",
              "pm.collectionVariables.set(\"locationId\", json.id);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"{{randomLocationName}}\",\n  \"description\": \"Большой театр Москвы\",\n  \"lat\": 55.7601,\n  \"lon\": 37.6187,\n  \"radius\": 1000\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/admin/locations",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "locations"]
        }
      }
    },
    {
      "name": "Получить все локации",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/admin/locations",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "locations"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Response is array\", function () {",
              "  pm.expect(pm.response.json()).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Получить локацию по id",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/admin/locations/{{locationId}}",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "locations", "{{locationId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "var json = pm.response.json();",
              "pm.test(\"Location has correct id\", function () {",
              "  pm.expect(json.id).to.eql(Number(pm.collectionVariables.get(\"locationId\")));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Получить события по локации",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/locations/{{locationId}}/events",
          "host": ["{{baseUrl}}"],
          "path": ["locations", "{{locationId}}", "events"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Response is array\", function () {",
              "  pm.expect(pm.response.json()).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Удалить локацию",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/admin/locations/{{locationId}}",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "locations", "{{locationId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 204\", function () {",
              "  pm.response.to.have.status(204);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Ошибка: удалить несуществующую локацию",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/admin/locations/999999",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "locations", "999999"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 404\", function () {",
              "  pm.response.to.have.status(404);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Ошибка: создать локацию с невалидными координатами",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Ошибка\",\n  \"lat\": 200,\n  \"lon\": 400,\n  \"radius\": -1\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/admin/locations",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "locations"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 400\", function () {",
              "  pm.response.to.have.status(400);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" }
  ]
}
